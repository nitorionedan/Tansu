<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ActionBarの背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--ステータスバー背景-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--文字の色-->
        <item name="titleTextColor">@color/colorAccent</item>

        <!-- TabLayoutの下線やRadioButton選択時などの色 -->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <!-- ウィンドウ背景色 -->
        <!--<item name="android:windowBackground">@color/windowBackground</item>-->

        <!--&lt;!&ndash; ナビゲーションバー（戻るキー・ホームキーなどがあるバー）の背景色 &ndash;&gt;-->
        <!--<item name="android:navigationBarColor">@color/navigationBarColor</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowTitleBackground">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

        <!--Humburger iconの色を変更-->
        <item name="color">@android:color/black</item>
    </style>

</resources>
